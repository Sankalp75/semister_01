#include <stdio.h>

// Define the Employee structure
struct Employee {
    int id;
    char name[100];
    float salary;
};

// Function to input employee details
void inputEmployee(struct Employee *e, int index) {
    printf("\nEnter details for Employee %d:\n", index + 1);
    printf("ID: ");
    scanf("%d", &e->id);
    printf("Name: ");
    scanf(" %[^\n]", e->name);   // read string with spaces
    printf("Salary: ");
    scanf("%f", &e->salary);
}

// Function to display employee details
void displayEmployee(struct Employee e) {
    printf("ID: %d\n", e.id);
    printf("Name: %s\n", e.name);
    printf("Salary: %.2f\n", e.salary);
}

int main() {
    int n;
    printf("Enter number of employees: ");
    scanf("%d", &n);

    struct Employee employees[n];  // Array of structures

    // Input details
    for (int i = 0; i < n; i++) {
        inputEmployee(&employees[i], i);
    }

    // Display employees with salary above 50,000
    printf("\nEmployees with Salary Above 50,000:\n");
    int found = 0;
    for (int i = 0; i < n; i++) {
        if (employees[i].salary > 50000) {
            displayEmployee(employees[i]);
            printf("\n");
            found = 1;
        }
    }

    if (!found) {
        printf("No employees have salary above 50,000.\n");
    }

    return 0;
}
