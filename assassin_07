#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int main() {
    FILE *fp;
    int n, id;
    char name[100];
    float salary;

    // Open file in write mode
    fp = fopen("Employees.txt", "w");
    if (fp == NULL) {
        printf("Error opening file!\n");
        return 1;
    }

    printf("Enter number of employees: ");
    scanf("%d", &n);

    // Clear input buffer before using fgets
    getchar();

    for (int i = 0; i < n; i++) {
        printf("\nEnter Employee %d ID: ", i + 1);
        scanf("%d", &id);

        getchar(); // clear newline left by scanf

        printf("Enter Employee %d Name: ", i + 1);
        fgets(name, sizeof(name), stdin);

        // Remove newline character from fgets
        size_t len = strlen(name);
        if (len > 0 && name[len - 1] == '\n') {
            name[len - 1] = '\0';
        }

        printf("Enter Employee %d Salary: ", i + 1);
        scanf("%f", &salary);

        // Write to file
        fprintf(fp, "ID: %d, Name: %s, Salary: %.2f\n", id, name, salary);

        getchar(); // clear newline for next loop
    }

    fclose(fp);
    printf("\nEmployee details successfully written to Employees.txt\n");

    return 0;
}
