#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp;
    int count = 0;
    char ch;

    // Open file in read mode
    fp = fopen("Books.txt", "r");
    if (fp == NULL) {
        printf("Error opening file! Make sure Books.txt exists.\n");
        return 1;
    }

    // Count lines by checking for newline characters
    while ((ch = fgetc(fp)) != EOF) {
        if (ch == '\n') {
            count++;
        }
    }

    fclose(fp);

    // If file is not empty, adjust count (last line may not end with '\n')
    if (count == 0) {
        printf("The file is empty.\n");
    } else {
        printf("Number of lines in Books.txt: %d\n", count + 1);
    }

    return 0;
}
