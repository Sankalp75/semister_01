#include <stdio.h>

// Define the Student structure
struct Student {
    char name[100];
    float marks;
};

// Function to input student details
void inputStudent(struct Student *s, int index) {
    printf("\nEnter details for Student %d:\n", index + 1);
    printf("Name: ");
    scanf(" %[^\n]", s->name);   // read string with spaces
    printf("Marks: ");
    scanf("%f", &s->marks);
}

// Function to display student details
void displayStudent(struct Student s, int index) {
    printf("\nStudent %d Information:\n", index + 1);
    printf("Name: %s\n", s.name);
    printf("Marks: %.2f\n", s.marks);
}

int main() {
    int n;
    float sum = 0, average;

    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student students[n];  // Array of structures

    // Input details
    for (int i = 0; i < n; i++) {
        inputStudent(&students[i], i);
        sum += students[i].marks;
    }

    // Display details
    for (int i = 0; i < n; i++) {
        displayStudent(students[i], i);
    }

    // Calculate average
    average = sum / n;
    printf("\nAverage Marks of %d Students: %.2f\n", n, average);

    return 0;
}
