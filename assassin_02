#include <stdio.h>

int main() {
    int num;

    // Accept a number from the user
    printf("Enter an integer: ");
    scanf("%d", &num);

    // Check whether the number is positive, negative, or zero
    if (num > 0) {
        printf("The number is positive.\n");
    } else if (num < 0) {
        printf("The number is negative.\n");
    } else {
        printf("The number is zero.\n");
    }

    return 0;
}
