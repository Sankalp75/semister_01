#include <stdio.h>

int main() {
    int n, i, j;
    int matrix[50][50];
    int sum = 0;

    // Input size of matrix
    printf("Enter the size of the matrix (n x n): ");
    scanf("%d", &n);

    // Input elements of matrix
    printf("Enter elements of the %d x %d matrix:\n", n, n);
    for (i = 0; i < n; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Calculate sum of main diagonal elements
    for (i = 0; i < n; i++) {
        sum += matrix[i][i];  // main diagonal elements have row == column
    }

    // Display result
    printf("Sum of main diagonal elements = %d\n", sum);

    return 0;
}
