#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char sentence[500];
    int i, words = 0;
    int inWord = 0;  // flag to track if we are inside a word

    printf("Enter a sentence: ");
    fgets(sentence, sizeof(sentence), stdin);

    // Traverse the sentence
    for (i = 0; sentence[i] != '\0'; i++) {
        if (!isspace(sentence[i]) && sentence[i] != '\n') {
            if (inWord == 0) {
                words++;       // new word starts
                inWord = 1;    // now inside a word
            }
        } else {
            inWord = 0;        // space or newline ends the word
        }
    }

    printf("Total number of words: %d\n", words);

    return 0;
}
